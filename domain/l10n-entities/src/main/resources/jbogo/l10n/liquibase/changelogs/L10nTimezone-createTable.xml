<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="L10nTimezone-createTable" author="jbogo">
        <!--
        Create L10nTimezone table with default name
        -->
        <createTable tableName="L10nTimezone">
            <column name="id" type="SMALLINT" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="code" type="NVARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="NVARCHAR(63)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>