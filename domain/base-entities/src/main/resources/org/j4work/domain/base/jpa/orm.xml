<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd"
        version="2.0">

    <mapped-superclass class="org.j4work.domain.base.entities.AbstractEntity"/>

    <mapped-superclass class="org.j4work.domain.base.entities.RefEntity" access="FIELD">

    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.RefL10nNamedEntity" access="FIELD">

    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.AutoIdEntity" access="FIELD">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
        </attributes>
    </mapped-superclass>
    
    <mapped-superclass class="org.j4work.domain.base.entities.AutoIdNamedEntity" access="FIELD">
        <attributes>
            <basic name="name" />
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.AutoIdUuEntity" access="FIELD">
        <attributes>
            <basic name="uuid">
                <column nullable="false" />
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.AutoIdUuNamedEntity" access="FIELD">
        <attributes>
            <basic name="name" />
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.ManualIdEntity" access="FIELD">
        <attributes>
            <id name="id" />
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.ManualIdNamedEntity" access="FIELD">
        <attributes>
            <basic name="name" />
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.ManualIdUuEntity" access="FIELD">
        <attributes>
            <basic name="uuid">
                <column nullable="false" />
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="org.j4work.domain.base.entities.ManualIdUuNamedEntity" access="FIELD">
        <attributes>
            <basic name="name" />
        </attributes>
    </mapped-superclass>
</entity-mappings>
